/**index.wxss**/
.aligncenter {
  display: flex;
  justify-content: center;
  align-items: center;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
page {
  background: #2d2f3b;height: 100%;
}
view {
  box-sizing: border-box;
  font-family: "Microsoft YaHei"
}
.weather-card {
  width: 100%;
  height: 100%;
  background: #fff;
  box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.3);
  overflow: hidden;
}
.today {
  width: 100%;height: 60%;
  position: relative;
  text-align: center;
}
/** 颜色参考 http://tool.oschina.net/commons?type=3 **/
.background-default {
  background: linear-gradient(0deg, rgba(135, 206, 250, 1) 0%, rgba(135, 206, 235, 1) 100%);
}
.background-dayu {
  background: linear-gradient(0deg, rgba(122, 197, 205, 1) 0%, rgba(142, 229, 238, 1) 100%);
}
.background-xiaoyu {
  background: linear-gradient(0deg, rgba(174, 238, 238, 1) 0%, rgba(187, 255, 255, 1) 100%);
}
.background-leizhenyu {
  background: linear-gradient(0deg, rgba(119, 136, 153, 1) 0%, rgba(112, 128, 144, 1) 100%);
}
.background-qing {
  background: linear-gradient(0deg, rgba(255, 127, 80, 1) 0%, rgba(255, 140, 0, 1) 100%);
}

.other {
  width: 100%;
  height: 40%;
  background: #fff;
}
.today .top {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  padding: 0 5rpx;
}
.today .top .range {
  font-size: 50rpx;
  color:#fff;
  float: left;
}
.today .top .refresh{
  float: right;
  line-height: 27rpx;
}
.today .top .refresh image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}
.today .middle{
  position: absolute; 
  top: 50%; left: 50%;
  transform: translate(-50%,-50%);
  color: #fff;
}
.today .middle image{width:250rpx;height: 250rpx;}

.today .bottom{
  width: 100%;
  position: absolute; 
  color: #fff;
  bottom: 0;left: 0;
  padding: 0 5px;
}
.today .bottom .temp{
  font-size: 125rpx;
  float: left;
  text-align: left;
}
.today .bottom .city-day{
  float: right;
  text-align: right;
}
.today .bottom .city-day .day{
  font-size: 70rpx;
}
.today .bottom .city-day .city{
  margin-top: 10rpx;
  font-size: 35rpx;
}
.other scroll-view{
  height: 100%;
  width: 100%;
  white-space: nowrap;
}
.other scroll-view .scroll-view-item{
  width: 33.33%;
  height: 100%;
  display: inline-block;
  border-right: 2rpx solid #edebe9;
  color: #bbb;
}
.other scroll-view .scroll-view-item .top{
  width: 100%;
  height: 25%;
  font-size: 48rpx;
}
.other scroll-view .scroll-view-item .middle{
  width: 100%;
  height: 40%;
}
.other scroll-view .scroll-view-item .middle image{
  width: 120rpx;
  height: 120rpx; 
  opacity: 0.5;
}
.other scroll-view .scroll-view-item .futuretype-text{text-align: center;height: 10%;}
.other scroll-view .scroll-view-item .bottom{
  width: 100%;
  height: 25%;
  font-size: 35rpx;
}